<div class="row center">
  <div class="col s12 m6 l4">
    <div class="card black">
      <div class="card-content white-text">
        <span class="card-title">Change your password</span>

          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
            <%= devise_error_messages! %>
            <%= f.hidden_field :reset_password_token %>

            <div class="input-field">
              <%= f.password_field :password, autofocus: true, autocomplete: "off", class: "validate", placeholder: "New password (8 character minimum)" %>
            </div>

            <div class="field">
             <%= f.password_field :password_confirmation, autocomplete: "off", class: "validate", placeholder: "Confirm new password" %>
            </div>

            <div class="actions">
              <%= f.submit "Change my password", class: "btn" %>
            </div>
          <% end %>

        <div class="card-action">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
