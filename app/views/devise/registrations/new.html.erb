<div class="row center">
  <div class="col s12 m6 l4 offset-m3 offset-l4">
    <div class="card white">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <div class="card-content black-text">
          <span class="card-title black-text">Sign up</span>


          <%= devise_error_messages! %>

          <div class="input-field">
            <%= f.text_field :name, autofocus: true, class: "validate", placeholder: "Name" %>
          </div>

          <div class="input-field">
            <%= f.email_field :email, autofocus: true, class: "validate", placeholder: "E-mail" %>
          </div>

          <div class="input-field">
            <%= f.password_field :password, autocomplete: "off", class: "validate", placeholder: "Password (8 characters minimum)" %>
          </div>

          <div class="input-field">
            <%= f.password_field :password_confirmation, autocomplete: "off", class: "validate", placeholder: "Password confirmation" %>
          </div>

          <%= render "devise/shared/links" %>

        </div>
        <div class="card-action clearfix">
          <%= f.submit "Sign up", class: "btn" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
