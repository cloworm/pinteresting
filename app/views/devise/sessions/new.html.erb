<div class="row center">
  <div class="col s12 m6 l4 offset-m3 offset-l4">
    <div class="card white">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="card-content black-text">
          <span class="card-title black-text">Log in</span>
            <div class="input-field">
              <%= f.email_field :email, autofocus: true, class: "validate", placeholder: "E-mail" %>
            </div>

            <div class="input-field">
              <%= f.password_field :password, autocomplete: "off", class: "validate", placeholder: "Password" %>
            </div>

            <% if devise_mapping.rememberable? -%>
              <div class="field">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me, class: "black-text" %>
              </div>
            <% end -%>
            <%= render "devise/shared/links" %>
        </div>
        <div class="card-action clear-fix">
          <%= f.submit class: "btn", value: "Log in" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
