<nav>
  <div class="container">
    <div class="nav-wrapper">
      <%= link_to "Fab Lab Hub", root_path, class: "navbar-brand" %>
      <a href="#" data-activates="mobile-side-nav" class="button-collapse"><i class="material-icons">menu</i></a>

      <ul class="right hide-on-med-and-down">
        <li>
          <%= link_to root_path do %>
            Home
          <% end %>
        </li>
        <li>
          <a class="dropdown-button" href="#" data-activates="fablabs"><!-- <i class="material-icons left">public</i> --> Fab Labs</a>
          <!-- Dropdown Structure -->
          <ul id="fablabs" class="dropdown-content">
            <li><a href="#!">Bristol</a></li>
            <li><a href="#!">Suwa</a></li>
            <li><%= link_to wayne_path do %>Wayne<% end %></li>
            <li><a href="#!">Willich</a></li>
          </ul>
        </li>
        <% if user_signed_in? %>
          <li class="navbar-avatar-item">
            <a class="dropdown-button" href="#" data-activates="account">
              <% if current_user.avatar.exists? %>
                <%= image_tag current_user.avatar.url(:tiny), class: "circle navbar-avatar" %>
              <% else %>
                <i class="material-icons left">face</i>
              <% end %>
            </a>
            <ul id="account" class="dropdown-content">
              <li><%= link_to "View Profile", user_path(current_user) %></li>
              <li><%= link_to "Edit Profile", edit_user_registration_path %></li>
              <li><%= link_to "Log Out", destroy_user_session_path, method: :delete %></li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "Sign In", new_user_session_path %></li>
        <% end %>
      </ul>

      <ul class="right">
        <li>
          <!-- Modal Trigger -->
          <a id="search-modal-trigger" class="modal-trigger" href="#search-modal">
            <i class="material-icons">search</i>
          </a>
        </li>
      </ul>

      <ul class="side-nav" id="mobile-side-nav">
        <li>
          <%= link_to root_path, class: "collapsible-header" do %>
            <i class="material-icons left">home</i> Home
          <% end %>
        </li>
        <li class="no-padding">
          <ul class="collapsible collapsible-accordion">
            <li>
              <a class="collapsible-header"><i class="material-icons left">public</i> Fab Labs</a>
              <div class="collapsible-body">
                <ul>
                  <li><a href="#!">Bristol</a></li>
                  <li><a href="#!">Suwa</a></li>
                  <li><a href="#!">Wayne</a></li>
                  <li><%= link_to wayne_path do %>Wayne<% end %></li>
                </ul>
              </div>
            </li>
            <% if user_signed_in? %>
              <li class="navbar-avatar-mobile">
                <a class="collapsible-header">
                  <% if current_user.avatar.exists? %>
                    <%= image_tag current_user.avatar.url(:tiny), class: "circle left responsive-img" %> Account
                  <% else %>
                    <i class="material-icons left">face</i> Account
                  <% end %>
                </a>
                <div class="collapsible-body">
                  <ul>
                    <li><%= link_to "Edit Profile", edit_user_registration_path %></li>
                    <li><%= link_to "Log Out", destroy_user_session_path, method: :delete %></li>
                  </ul>
                </div>
              </li>
            <% else %>
              <li><%= link_to "Sign In", new_user_session_path %></li>
            <% end %>
          </ul>
        </li>
      </ul>
    </div>
  </div>
</nav>

<!-- Modal Structure -->
<div id="search-modal" class="modal">
  <div class="modal-content">
    <nav>
      <div class="nav-wrapper">
        <form action="<%= pins_search_path %>">
          <div class="input-field">
            <input id="search" name="search" type="search" required>
            <label for="search"><i class="material-icons">search</i></label>
            <i class="material-icons">close</i>
          </div>
        </form>
      </div>
    </nav>
  </div>
</div>
