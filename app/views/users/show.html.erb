<div class="container">
  <div class="row">

    <div class="col s12 m5 l4">
      <%= @user.name %>

    </div>

    <div class="col s12 m7 l8">
      <div class="profile-pins">
        <% @pins.each do |pin| %>
          <%= render_pin_card(pin, image_size: :large) %>
        <% end %>
      </div>
      <div class="center">
        <%= will_paginate @pins %>
      </div>
    </div>

  </div>
</div>
