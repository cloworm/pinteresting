<%= render 'pages/home' unless user_signed_in? %>

<div class="container">

  <% if user_signed_in? %>
    <div class="fixed-action-btn">
      <%= link_to new_pin_path, class: "btn-floating btn-large red" do %>
        <i class="large material-icons">add_a_photo</i>
      <% end %>
    </div>
  <% end %>

  <div id="pins" class="transitions-enabled">

    <% if user_signed_in? %>
      <%= render_new_pin_card %>
    <% end %>
    <% @pins.each do |pin| %>
      <%= render_pin_card(pin) %>
    <% end %>
  </div>

  <div class="center">
    <%= will_paginate @pins %>
  </div>
</div>
