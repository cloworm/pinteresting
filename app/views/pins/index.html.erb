<div class="container">

  <% if user_signed_in? %>
    <%= link_to 'New Pin', new_pin_path %>
  <% end %>

  <div id="pins" class="transitions-enabled">
    <% @pins.each do |pin| %>
      <div class="box card white">
        <%= image_tag pin.image.url(:medium) %>
        <div class="card-content">
          <%= pin.description %>
          <%= pin.user.email if pin.user %>
          <%= link_to 'Show', pin %>
          <% if pin.user == current_user %>
            <%= link_to 'Edit', edit_pin_path(pin) %>
            <%= link_to 'Destroy', pin, method: :delete, data: { confirm: 'Are you sure you want to delete project?' } %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
