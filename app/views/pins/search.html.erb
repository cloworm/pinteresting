<div class="container">
  <% if user_signed_in? %>
    <div class="fixed-action-btn">
      <%= link_to new_pin_path, class: "btn-floating btn-large red" do %>
        <i class="large material-icons">add_a_photo</i>
      <% end %>
    </div>
  <% end %>

  <!-- TODO: Make the no results thing more reusable? -->
  <% if @pins.empty? %>
    <h4>No results.</h4>
  <% else %>
    <div id="pins" class="transitions-enabled">
      <% @pins.each do |pin| %>
        <%= render_pin_card(pin) %>
      <% end %>
    </div>
  <% end %>

  <div class="center">
    <%= will_paginate @pins %>
  </div>
</div>
